<UserControl x:Class="QTIEditor.ChoiceInteractionItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QTIEditor"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="500" BorderBrush="Black" Background="White" Padding="10,5">
    <Grid>
        <CheckBox x:Name="IsCorrect" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" >
            <CheckBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </CheckBox.RenderTransform>
        </CheckBox>
        <TextBox x:Name="AnswerValue" Height="20" Margin="40,0,20,0" TextChanged="Text_IsChanged"/>
    </Grid>
</UserControl>
